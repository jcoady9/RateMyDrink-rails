<h1>Drink Index</h1>

<%= link_to "new drink", new_drink_path %>
<%= link_to "beer list", beers_path %>

<table>
	<tr>
		<th>Name:</th>
		<th>Type:</th>
	</tr>

	<%= @drinks.each do |drink| %>
		<tr>
			<td><%= drink.name %></td>
			<td><%= drink.type %></td>
			<td><%= link_to 'show', drink_path(drink) %></td>
			<td><%= link_to 'delete', drinks_path(drink),
					method: :delete,
					data: { confirm: 'Are you sure?'} %></td>
		</tr>
	<% end %>

</table>